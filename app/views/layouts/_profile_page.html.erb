<div class="row">
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a class="nav-link active" id="nav-about-tab" data-bs-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">About</a>
    <a class="nav-link" id="nav-task-tab" data-bs-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Tasks</a>
  </div>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-about" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="row">
          <div class="col-sm-4">
            <div class="card my-1 p-1">
              <% unless user.nil? %>
                <h5>Name</h5>            
                <div class="card-text text-center"><%= user.name %></div>
                <h5>E-mail</h5>
                <div class="card-text text-center"><%= user.email %></div>
              <% end %>
              <% unless team.nil? %>
                <h5>Name</h5>            
                <div class="card-text text-center"><%= team.name %></div>
                <h5>Owner</h5>            
                <div class="card-text text-center"><%= team.user.name %></div>
                <h5>Description</h5>
                <div class="card-text"><%= team.description %></div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-8">
            <% unless user.nil? %>
              <%= render 'teams/teams', teams: teams %>
            <% end %>
            <% unless team.nil? %>
              <%= render 'users/users', users: users %>
            <% end %>
          </div>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-task" role="tabpanel" aria-labelledby="nav-profile-tab">
      ...
    </div>
  </div>
</div>
<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid ps-5 pe-5">
      <a class="navbar-brand" href="/">PlanDo</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <% if logged_in? %>
        <div class="btn-group">
          <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">MENU</button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li class="dropdown-item"><%= link_to 'My Page', user_path(current_user), class: 'nav-link' %></li>
            <li class="dropdown-item"><%= link_to 'Users', users_path, class: 'nav-link' %></li>
            <li class="dropdown-item"><%= link_to 'Teams', teams_path, class: 'nav-link' %></li>
            <li class="dropdown-item"><%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %></li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to "Sign Up", signup_path, class: 'nav-link' %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>
</header>
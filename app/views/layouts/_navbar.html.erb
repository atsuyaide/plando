<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid ps-5 pe-5">
      <a class="navbar-brand" href="/">PlanDo</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if logged_in? %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav text-center">
            <li class="nav-item"><%= link_to 'Home'   , root_path,               class: 'nav-link '+active_page?(root_path) %></li>
            <li class="nav-item"><%= link_to 'My Page', user_path(current_user), class: 'nav-link '+active_page?(user_path(current_user)) %></li>
            <li class="nav-item"><%= link_to 'Users'  , users_path,              class: 'nav-link '+active_page?(users_path) %></li>
            <li class="nav-item"><%= link_to 'Teams'  , teams_path,              class: 'nav-link '+active_page?(teams_path) %></li>
            <li class="nav-item"><%= link_to 'Logout' , logout_path, method: :delete, class: 'nav-link' %></li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav text-center">
            <li class="nav-item"><%= link_to "Login", login_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "Sign Up", signup_path, class: 'nav-link' %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>
</header>
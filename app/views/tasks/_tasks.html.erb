<% if tasks.any? %>
  <table class="table table-striped" style="table-layout:fixed;width:100%;max-width:768px;" align="center">
    <thead>
      <tr>
        <th style="width: 5%" scope="col">#</th>
        <th style="width: 35%" scope="col">Title</th>
        <th style="width: 35%" scope="col">Deadline</th>
        <th style="width: 25%" scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each_with_index do |task, idx| %>
        <tr>
          <th scope="row"><%= idx + 1 %></th>
          <td><%= link_to task.title, edit_task_path(task) %></td>
          <td><%= task.deadline.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy_2) %>
  </div>
<% end %>